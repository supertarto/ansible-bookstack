# Application key
# Used for encryption where needed.
# Run `php artisan key:generate` to generate a valid key.
APP_KEY=SomeKey

# Application URL
# Remove the hash below and set a URL if using BookStack behind
# a proxy, if using a third-party authentication option.
# This must be the root URL that you want to host BookStack on.
# All URL's in BookStack will be generated using this value.
#APP_URL=https://example.com

# Database details
DB_HOST={{ bookstack_host }}
DB_DATABASE={{ bookstack_db_name }}
DB_USERNAME={{ bookstack_db_user }}
DB_PASSWORD={{ bookstack_db_password }}

# Mail system to use
# Can be 'smtp' or 'sendmail'
MAIL_DRIVER={{ bookstack_mail_driver }}

# Mail sender options
MAIL_FROM_NAME={{ bookstack_mail_from_name }}
MAIL_FROM={{ bookstack_mail_from }}

# SMTP mail options
MAIL_HOST={{ bookstack_smtp_host }}
MAIL_PORT={{ bookstack_smtp_port }}
MAIL_USERNAME={{ bookstack_smtp_username }}
MAIL_PASSWORD={{ bookstack_smtp_password }}
MAIL_ENCRYPTION={{ bookstack_smtp_encryption }}


# A full list of options can be found in the '.env.example.complete' file.
